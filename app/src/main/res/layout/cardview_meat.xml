<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_height"
    android:layout_marginBottom="@dimen/cards_padding_bottom">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/ColorBackground">

            <ImageView
                android:id="@+id/TypeOfMeatPicture"
                android:layout_width="135dp"
                android:layout_height="140dp"
                android:layout_marginTop="@dimen/lateral_margin"
                android:layout_marginBottom="@dimen/lateral_margin"
                android:background="@drawable/pizza_le"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/TypeOfMeatTittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pepperoni"
                    android:textSize="@dimen/subtitles_size"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/leftside_pizza"
                        android:layout_width="@dimen/circle_pizza"
                        android:layout_height="@dimen/circle_pizza"
                        android:button="@drawable/left_checkbox_pizza"/>

                    <CheckBox
                        android:id="@+id/center_pizza"
                        android:layout_width="@dimen/circle_pizza"
                        android:layout_height="@dimen/circle_pizza"
                        android:layout_marginLeft="@dimen/lateral_margin"
                        android:layout_marginRight="@dimen/lateral_margin"
                        android:button="@drawable/center_checkbox_pizza"/>

                    <CheckBox
                        android:id="@+id/rightside_pizza"
                        android:layout_width="@dimen/circle_pizza"
                        android:layout_height="@dimen/circle_pizza"
                        android:button="@drawable/right_checkbox_pizza"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/porciones"
                    android:textSize="@dimen/normaltext_size"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:layout_width="@dimen/square"
                        android:layout_height="@dimen/square"
                        android:text="-"
                        android:textSize="30sp"
                        android:paddingTop="0dp"
                        android:theme="@style/RaisedButton"/>

                    <TextView
                        android:layout_width="@dimen/square"
                        android:layout_height="@dimen/square"
                        android:text="0"
                        android:textSize="30dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>

                    <Button
                        android:layout_width="@dimen/square"
                        android:layout_height="@dimen/square"
                        android:text="+"
                        android:textSize="30sp"
                        android:paddingTop="0dp"
                        android:layout_gravity="end"
                        android:theme="@style/RaisedButton"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/extracheese"
                        android:textSize="@dimen/normaltext_size"/>

                    <TextView
                        android:id="@+id/TypeOfMeatExtraCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="@dimen/smalltext_size"
                        android:textStyle="bold"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>