<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_height"
    android:layout_marginBottom="@dimen/cards_padding_bottom">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ColorBackground">

        <LinearLayout
            android:id="@+id/CardMenuPizza"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/CardMenuPizzaPicture"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginTop="@dimen/lateral_margin"
                android:layout_marginBottom="@dimen/lateral_margin"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/CardMenuPizzaTittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pepperoni"
                    android:textSize="@dimen/subtitles_size"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="@dimen/lateral_margin"/>

                <TextView
                    android:id="@+id/CardMenuPizzaCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 110.00 mxn"
                    android:layout_marginTop="@dimen/tittle_top_margin"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:id="@+id/CardMenuPizzaRuta"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/CardMenuPizzaIngredients"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>