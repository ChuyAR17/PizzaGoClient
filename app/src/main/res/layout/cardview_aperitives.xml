<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_height"
    android:layout_marginBottom="@dimen/cards_padding_bottom">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/ColorBackground">

            <ImageView
                android:id="@+id/CardMenuAperitivesPicture"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginTop="@dimen/lateral_margin"
                android:layout_marginBottom="@dimen/lateral_margin"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/CardMenuAperitivesTittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aperitivos"
                    android:textSize="@dimen/subtitles_size"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/tittle_top_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cost_each_drink"/>

                    <TextView
                        android:id="@+id/CardMenuAperitivesCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30.0"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cantidad"
                    android:textSize="@dimen/normaltext_size"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/AperitivesButtonMenos"
                        android:layout_width="@dimen/square"
                        android:layout_height="@dimen/square"
                        android:text="-"
                        android:textSize="30sp"
                        android:paddingTop="0dp"
                        android:theme="@style/RaisedButton"/>

                    <TextView
                        android:id="@+id/AperitivesNoCantidad"
                        android:layout_width="@dimen/square"
                        android:layout_height="@dimen/square"
                        android:text="0"
                        android:textSize="30dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:background="@android:color/white"/>

                    <Button
                        android:id="@+id/AperitivesButtonMas"
                        android:layout_width="@dimen/square"
                        android:layout_height="@dimen/square"
                        android:text="+"
                        android:textSize="30sp"
                        android:paddingTop="0dp"
                        android:layout_gravity="end"
                        android:theme="@style/RaisedButton"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>