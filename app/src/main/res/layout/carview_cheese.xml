<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_height"
    android:layout_marginBottom="@dimen/cards_padding_bottom">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ColorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/TypeOfCheeseImage"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginTop="@dimen/lateral_margin"
                android:layout_marginBottom="@dimen/lateral_margin"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/TypeOfCheeseTittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Queso Oaxaca"
                    android:textSize="@dimen/subtitles_size"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/porciones"
                    android:textSize="@dimen/normaltext_size"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/CheeseButtonMenos"
                        android:layout_width="@dimen/square"
                        android:layout_height="@dimen/square"
                        android:text="-"
                        android:textSize="30sp"
                        android:paddingTop="0dp"
                        android:theme="@style/RaisedButton"/>

                    <TextView
                        android:id="@+id/CheeseNoPorciones"
                        android:layout_width="@dimen/square"
                        android:layout_height="@dimen/square"
                        android:textSize="@dimen/text_no_portions"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="0"
                        android:background="@android:color/white"/>

                    <Button
                        android:id="@+id/CheeseButtonMas"
                        android:layout_width="@dimen/square"
                        android:layout_height="@dimen/square"
                        android:text="+"
                        android:textSize="30sp"
                        android:paddingTop="0dp"
                        android:layout_gravity="end"
                        android:theme="@style/RaisedButton"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/extracheese"
                        android:textSize="@dimen/normaltext_size"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/TypeOfCheeseExtraCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="@dimen/smalltext_size"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>